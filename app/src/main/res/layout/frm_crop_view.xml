    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_action_planviewharvest" />

            <TextView
                android:id="@+id/textCid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="พืช :"
                android:textColor="@color/colorblack"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textCrop"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:text="พืช"
                android:textColor="@color/colorlightGreen"
                android:textSize="14dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_action_planviewharvest" />

            <TextView
                android:id="@+id/textCropTID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ประเภท : "
                android:textColor="@color/colorblack"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textCropTypeTID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ประเภท : "
                android:textColor="@color/colorlightGreen"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_action_planviewdata" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="วันเก็บเกี่ยว :"
                android:textColor="@color/colorblack"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textBeginHarvest"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="วันเก็บเกี่ยว"
                android:textColor="@color/colorAccent"
                android:textSize="14dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:src="@drawable/ic_action_planviewdata" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:text="ระยะเวลา :"
                android:textColor="@color/colorblack"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textHarvestPeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="ระยะเวลา"
                android:textColor="@color/colorAccent"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
