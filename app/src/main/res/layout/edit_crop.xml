<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/red_button"
        android:backgroundTint="@color/colorlightGreen"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/style1"
            android:orientation="horizontal"
            android:padding="12dp">

            <EditText
                android:id="@+id/edtEditCropName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/style1"
                android:hint="พืชเพาะปลูก :"
                android:inputType="text"
                android:padding="1dp"
                android:textSize="20dp" />

            <!-- <Spinner
                 android:id="@+id/cropSpinner"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="1dp"></Spinner>-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/style1"
            android:orientation="horizontal"
            android:padding="12dp">

            <EditText
                android:id="@+id/EditcropType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="ประเภทพืชเพาะปลูก :"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/EditcropTypeSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"></Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/style1"
            android:orientation="horizontal"
            android:padding="1dp">

            <EditText
                android:id="@+id/edtEditBeginHarvest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/style1"
                android:hint="จำนวนวันที่เก็บเกี่ยว :"
                android:inputType="number"
                android:maxLength="4"
                android:padding="10dp"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/style1"
            android:orientation="horizontal"
            android:padding="1dp">

            <EditText
                android:id="@+id/edtEditHarvestPeriod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/style1"
                android:hint="ระยะเวลาที่เก็บเกี่ยว :"
                android:inputType="number"
                android:maxLength="4"
                android:padding="10dp"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/style1"
            android:orientation="horizontal"
            android:padding="1dp">

            <EditText
                android:id="@+id/edtEditYield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/style1"
                android:hint="ผลผลิตต่อไร่ :"
                android:inputType="number"
                android:padding="10dp"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>